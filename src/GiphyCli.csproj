<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <ToolCommandName>giphy</ToolCommandName>
        <PackAsTool>True</PackAsTool>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <Authors>DavidDeSloovere</Authors>
        <Company />
        <Description>Unofficial Giphy CLI as global dotnet tool - get that url or markdown fast.
&gt; `giphy lolcats`</Description>
        <PackageProjectUrl>https://github.com/DavidDeSloovere/giphy-cli</PackageProjectUrl>
        <RepositoryUrl>https://github.com/DavidDeSloovere/giphy-cli.git</RepositoryUrl>
        <PackageTags>giphy cli</PackageTags>
        <Product>Giphy CLI</Product>
        <RepositoryType>git</RepositoryType>
        <PackageIconUrl></PackageIconUrl>
        <Version>2.2.0</Version>
        <PackageReleaseNotes>Extra `-m` option to only output markdown.</PackageReleaseNotes>
        <PackageIcon>icon.png</PackageIcon>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Colorful.Console" Version="1.2.15" />
        <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="4.0.1" />
        <PackageReference Include="RestSharp" Version="106.13.0" />
        <PackageReference Include="Sharprompt" Version="2.4.4" />
        <PackageReference Include="TextCopy" Version="6.2.1" />
    </ItemGroup>
    <ItemGroup>
        <None Include="..\icon.png" Pack="true" PackagePath="\"/>
        <None Include="..\readme.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>